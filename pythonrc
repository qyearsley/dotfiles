# Python interactive shell configuration
# This file is executed when you start python interactively.

import sys
import os
import readline
import rlcompleter

# Enable tab completion
readline.parse_and_bind("tab: complete")

# History file
history_file = os.path.expanduser("~/.python_history")
try:
    readline.read_history_file(history_file)
except FileNotFoundError:
    pass

# Save history on exit
import atexit
atexit.register(readline.write_history_file, history_file)

# Useful imports for interactive use
import json
import datetime
import itertools
import collections

# Common aliases
pp = print
jj = json.dumps
ppj = lambda x: print(json.dumps(x, indent=2, default=str))

# Better error tracebacks
import traceback
import sys

def excepthook(type, value, tb):
    traceback.print_exception(type, value, tb)
    print("\nUse Ctrl+D to exit")

sys.excepthook = excepthook

print("Python interactive shell configured!")
print("Available shortcuts: pp (print), jj (json.dumps), ppj (pretty print json)") 